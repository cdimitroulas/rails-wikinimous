<%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :title%>
    <%= f.text_field :title, class: "form-control", id:"title"%>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control", id: "content-editor"%>
  </div>
  <%= f.submit class: "btn btn-primary", id: "btn-submit" %>
<% end %>

